{
  "name": "sati-mcp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "gen:types": "supabase gen types typescript --project-id clhexsbqfbvbkfvefapi > src/types/database.d.ts",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "mcp:inspect": "npx @modelcontextprotocol/inspector@latest",
    "mcp:start": "node mcp-server.mjs",
    "validate": "npm run lint && npm run type-check && npm run test:unit"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.44",
